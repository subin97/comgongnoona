 <!--result_program, portability 값 넘기기-->

<header class="masthead">
    <div class="container h-100">
        <div class="row h-100">
            <form action="/home/storage" method="get">
                <div class="col-lg-12 question">
                    <h2>휴대성 VS 고성능?</h2>    
                </div>
                
                <div class="row">
                    <div class="col-lg-4 col-sm-6 text-center mb-4">
                      <button type="radio" class="btn btn-link" name="portability" value="portable"><img class="icon" src="/img/icons/storage.png" height=200px ></button>
                      <br><h3>휴대성</h3>
                    </div>
                    <div class="col-lg-4 col-sm-6 text-center mb-4">
                      <button type="radio" class="btn btn-link" name="portability" value="HQportable"><img class="icon" src="/img/icons/storage.png" height=200px ></button>
                      <br><h3>고성능>휴대성</h3>
                    </div>
                    <div class="col-lg-4 col-sm-6 text-center mb-4">
                      <button type="radio" class="btn btn-link" name="portability" value="HQonly"><img class="icon" src="/img/icons/storage.png" height=200px ></button>
                      <br><h3>고성능 고정</h3>
                    </div>
                </div>
                <input type="hidden" name="result_program" value="<%= @result_program %>">

            </form>
        </div>
    </div>
</header>

